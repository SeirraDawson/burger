<div class="container">
  <div class="row">
    <div class="col-s-12 text-center">
      <h1>Eat Da Burger</h1>
    </div>

    <div class="row">
      <img src="/assets/img/burger.jpg" width="400px" alt="burger icon"></img>
    </div>

    <div class="col-s-6 text-center" class="to-do">
      <div class="row">
        {{#each burgerData}}
          {{#unless this.devoured}}
        <div class="col-s-9 text-center">
          <pre>{{this.id}}.{{this.burger_name}}</pre>
        </div>

        <div class="col-s-3 text-center">
          <form method="POST" action="/burgers/update?_method=PUT"
            class="button-size">
            <input type="hidden" name="burgerID" type="text" value={{this.id}}>
            <br>
            <button type="submit" class="btn btn-default">
              Devour It!
            </button>
          </form>
        </div>
        {{/unless}}
        {{/each}}
      </div>
    </div>

    <div class="col-s-6 text-center" class="to-do">
      {{#each burgerData}}
        {{#if this.devoured}}
          <input class="form-control" type="text" placeholder="{{this.id}}.{{this.burger_name}}" readonly>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-s-12 text-center enter_section">
      <form action="/burgers/create" method="POST">
        <input type="text" name="burgerName" class="form-control" value="" id="enter_text">
        <button type="submit" class="btn btn-primary" id="enter-button">
          Submit
        </button>
      </form>
      <p>Enter the burger you prefer to eat</p>
    </div>
  </div>
</div>



